---
import Layout from "../layouts/Layout.astro";
import PublicationsPage from "../components/Publicationspage.jsx";
import { getLangFromUrl, loadTina, loadContent } from "../utils/i18n.js";

const lang = getLangFromUrl(Astro.url) || "en";

// This is equivalent to getStaticProps in Next.js
const pageResponse = await loadTina(lang, "publications");
const siteConfig = await loadContent(lang, "site_config");

// Prepare props for the React component
const tinaProps = {
  data: pageResponse.data,
  query: pageResponse.query,
  variables: pageResponse.variables,
};
const publicationsData =
  (pageResponse.data as any)[`publications_${lang}`] || {};
---

<Layout
  title={`Publications - ${siteConfig.organization?.name}`}
  description={publicationsData.hero?.description ||
    "Tamil Literature & Resources"}
  lang={lang}
>
  <PublicationsPage props={tinaProps} lang={lang} client:load />
</Layout>

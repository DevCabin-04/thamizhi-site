---
import Layout from "../layouts/Layout.astro";
import siteConfig from "../content/site_config.json";

const publicationsContent = {
  hero: {
    title: "Publications",
    subtitle: "Tamil Literature & Resources",
    description: "Discover our collection of Tamil publications, research papers, and educational materials that preserve and promote Tamil culture and literature."
  },
  categories: [
    {
      name: "Books",
      description: "Tamil literature, poetry, and educational books",
      count: 45,
      icon: "book"
    },
    {
      name: "Magazines",
      description: "Monthly and quarterly Tamil magazines",
      count: 12,
      icon: "magazine"
    },
    {
      name: "Research Papers",
      description: "Academic research on Tamil culture and history",
      count: 28,
      icon: "research"
    },
    {
      name: "Educational Materials",
      description: "Learning resources for Tamil language",
      count: 35,
      icon: "education"
    }
  ],
  featured_publications: [
    {
      title: "Tamil Heritage Chronicles",
      subtitle: "தமிழ் பாரம்பரிய வரலாறு",
      author: "Dr. Kumari Selvam",
      category: "History",
      year: "2024",
      pages: 328,
      description: "A comprehensive study of Tamil cultural heritage spanning over 2000 years, covering ancient traditions, art forms, and social customs.",
      cover_color: "from-blue-500 to-blue-700",
      available: true
    },
    {
      title: "Modern Tamil Poetry Collection",
      subtitle: "நவீன தமிழ் கவிதை தொகுப்பு",
      author: "Various Authors",
      category: "Literature",
      year: "2023",
      pages: 256,
      description: "A curated collection of contemporary Tamil poetry from emerging and established poets worldwide.",
      cover_color: "from-green-500 to-green-700",
      available: true
    },
    {
      title: "Tamil Grammar Simplified",
      subtitle: "தமிழ் இலக்கணம் எளிதாக",
      author: "Prof. Raman Krishnan",
      category: "Education",
      year: "2023",
      pages: 184,
      description: "An easy-to-understand guide to Tamil grammar for students and Tamil language learners.",
      cover_color: "from-orange-500 to-orange-700",
      available: true
    },
    {
      title: "Tamil Cultural Festivals",
      subtitle: "தமிழ் பண்பாட்டு விழாக்கள்",
      author: "Dr. Meera Sundaram",
      category: "Culture",
      year: "2024",
      pages: 298,
      description: "Detailed documentation of traditional Tamil festivals, their origins, and modern celebrations.",
      cover_color: "from-purple-500 to-purple-700",
      available: false
    }
  ],
  magazines: [
    {
      name: "Tamil Munnetram",
      subtitle: "தமிழ் முன்னேற்றம்",
      frequency: "Monthly",
      description: "Contemporary Tamil culture, arts, and community news"
    },
    {
      name: "Ilakkiya Valar",
      subtitle: "இலக்கிய வளர்",
      frequency: "Quarterly",
      description: "Literary magazine featuring Tamil poetry, short stories, and criticism"
    },
    {
      name: "Tamil Kalai",
      subtitle: "தமிழ் கலை",
      frequency: "Bi-monthly",
      description: "Traditional and modern Tamil arts, music, and dance"
    }
  ],
  digital_resources: {
    title: "Digital Resources",
    items: [
      "Online Tamil Dictionary",
      "Audio Book Collection",
      "Tamil Typing Tutorials",
      "Historical Document Archive",
      "Children's Story Collection",
      "Tamil Music Library"
    ]
  }
};
---

<Layout
    title={`Publications - ${siteConfig.organization.name}`}
    description={publicationsContent.hero.description}
>
    <!-- Page Header -->
    <section class="bg-gradient-to-br from-orange-600 via-red-600 to-amber-600 text-white relative overflow-hidden">
        <div class="absolute inset-0 opacity-10">
            <div class="absolute top-0 left-0 w-full h-full" style="background-image: radial-gradient(circle, white 1px, transparent 1px); background-size: 20px 20px;"></div>
        </div>
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 relative">
            <div class="max-w-3xl">
                <h1 class="text-4xl lg:text-5xl font-bold mb-4">
                    {publicationsContent.hero.title}
                </h1>
                <h2 class="text-2xl lg:text-3xl font-medium text-orange-100 mb-6">
                    {publicationsContent.hero.subtitle}
                </h2>
                <p class="text-xl text-orange-100">
                    {publicationsContent.hero.description}
                </p>
            </div>
        </div>
    </section>

    <!-- Categories Overview -->
    <section class="py-16 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold text-gray-900 mb-4">Publication Categories</h2>
                <p class="text-lg text-gray-600">Explore our diverse collection of Tamil publications</p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                {publicationsContent.categories.map((category) => (
                    <div class="bg-white rounded-lg shadow-lg p-6 text-center hover:shadow-xl transition-shadow">
                        <div class="w-16 h-16 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-4">
                            <svg class="w-8 h-8 text-orange-600" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                            </svg>
                        </div>
                        <h3 class="text-xl font-semibold text-gray-900 mb-2">{category.name}</h3>
                        <p class="text-gray-600 mb-4">{category.description}</p>
                        <div class="text-2xl font-bold text-orange-600">{category.count}</div>
                        <p class="text-sm text-gray-500">Publications</p>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <!-- Featured Publications -->
    <section class="py-16 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold text-gray-900 mb-4">Featured Publications</h2>
                <p class="text-lg text-gray-600">Recent and popular Tamil publications</p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                {publicationsContent.featured_publications.map((publication) => (
                    <div class="bg-gray-50 rounded-lg p-6 flex gap-6">
                        <!-- Book Cover -->
                        <div class={`w-32 h-40 bg-gradient-to-br ${publication.cover_color} rounded-lg flex-shrink-0 flex items-center justify-center`}>
                            <div class="text-white text-center p-2">
                                <div class="text-sm font-semibold mb-1">{publication.category}</div>
                                <div class="text-xs">{publication.year}</div>
                            </div>
                        </div>

                        <!-- Book Details -->
                        <div class="flex-1">
                            <h3 class="text-xl font-bold text-gray-900 mb-1">{publication.title}</h3>
                            <h4 class="text-lg text-orange-600 mb-3">{publication.subtitle}</h4>
                            <p class="text-gray-600 mb-2">By {publication.author}</p>
                            <p class="text-sm text-gray-500 mb-3">{publication.pages} pages • {publication.year}</p>
                            <p class="text-gray-700 mb-4">{publication.description}</p>

                            <div class="flex items-center gap-3">
                                {publication.available ? (
                                    <button class="bg-orange-600 text-white px-4 py-2 rounded-lg hover:bg-orange-700 transition-colors">
                                        Download PDF
                                    </button>
                                ) : (
                                    <button class="bg-gray-400 text-white px-4 py-2 rounded-lg cursor-not-allowed">
                                        Coming Soon
                                    </button>
                                )}
                                <button class="border border-gray-300 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-50 transition-colors">
                                    Preview
                                </button>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <!-- Magazines -->
    <section class="py-16 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold text-gray-900 mb-4">Tamil Magazines</h2>
                <p class="text-lg text-gray-600">Regular publications keeping Tamil culture alive</p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                {publicationsContent.magazines.map((magazine) => (
                    <div class="bg-white rounded-lg shadow-lg p-6 text-center">
                        <div class="w-20 h-20 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-4">
                            <svg class="w-10 h-10 text-orange-600" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"/>
                            </svg>
                        </div>
                        <h3 class="text-xl font-semibold text-gray-900 mb-1">{magazine.name}</h3>
                        <h4 class="text-lg text-orange-600 mb-3">{magazine.subtitle}</h4>
                        <p class="text-sm text-gray-500 mb-3">{magazine.frequency}</p>
                        <p class="text-gray-700 mb-6">{magazine.description}</p>
                        <button class="bg-orange-600 text-white px-6 py-2 rounded-lg hover:bg-orange-700 transition-colors">
                            Subscribe
                        </button>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <!-- Digital Resources -->
    <section class="py-16 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold text-gray-900 mb-4">{publicationsContent.digital_resources.title}</h2>
                <p class="text-lg text-gray-600">Online Tamil learning and reference materials</p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {publicationsContent.digital_resources.items.map((resource) => (
                    <div class="bg-orange-50 rounded-lg p-6 text-center hover:bg-orange-100 transition-colors cursor-pointer">
                        <svg class="w-12 h-12 text-orange-600 mx-auto mb-4" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                        </svg>
                        <h3 class="text-lg font-semibold text-gray-900">{resource}</h3>
                    </div>
                ))}
            </div>

            <div class="text-center mt-12">
                <button class="bg-orange-600 text-white px-8 py-3 rounded-lg text-lg hover:bg-orange-700 transition-colors">
                    Access Digital Library
                </button>
            </div>
        </div>
    </section>

    <!-- Contact for Publications -->
    <section class="py-16 bg-gray-50">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">Submit Your Publication</h2>
            <p class="text-lg text-gray-600 mb-8">
                Do you have Tamil literature or research to share? We welcome submissions from community members.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <button class="bg-orange-600 text-white px-6 py-3 rounded-lg hover:bg-orange-700 transition-colors">
                    Submission Guidelines
                </button>
                <button class="bg-gray-600 text-white px-6 py-3 rounded-lg hover:bg-gray-700 transition-colors">
                    Contact Editor
                </button>
            </div>
        </div>
    </section>
</Layout>

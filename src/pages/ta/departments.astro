---
import Layout from "../../layouts/Layout.astro";
import { getLangFromUrl, loadContentSafe } from "../../utils/i18n";

const lang = getLangFromUrl(Astro.url) || "ta";
const departmentsContent = await loadContentSafe(lang, "departments");
const siteConfig = await loadContentSafe(lang, "site_config");
---

<Layout
    title={`${departmentsContent.hero?.title} - ${siteConfig.organization?.name}`}
    description={departmentsContent.hero?.description}
    lang={lang}
>
    <!-- Page Header -->
    <section
        class="bg-gradient-to-br from-orange-600 via-red-600 to-amber-600 text-white relative overflow-hidden"
    >
        <div class="absolute inset-0 opacity-10">
            <div
                class="absolute top-0 left-0 w-full h-full"
                style="background-image: radial-gradient(circle, white 1px, transparent 1px); background-size: 20px 20px;"
            >
            </div>
        </div>
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 relative">
            <div class="max-w-3xl">
                <h1 class="text-4xl lg:text-5xl font-bold mb-4">
                    {departmentsContent.hero.title}
                </h1>
                <h2
                    class="text-2xl lg:text-3xl font-medium text-orange-100 mb-6"
                >
                    {departmentsContent.hero.title_tamil}
                </h2>
                <p class="text-xl text-orange-100">
                    {departmentsContent.hero.description}
                </p>
            </div>
        </div>
    </section>

    <!-- Departments Grid -->
    <section class="py-16 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold text-gray-900 mb-4">
                    துறைகள் மற்றும் திட்டங்கள்
                </h2>
                <p class="text-lg text-gray-600">
                    எங்கள் பல்வேறு துறைகளின் பணிகளை அறியுங்கள்
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {
                    departmentsContent.departments?.map((department) => (
                        <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
                            <!-- Department Header -->
                            <div class={`h-32 bg-gradient-to-br ${department.color} flex items-center justify-center`}>
                                <div class="text-white text-center">
                                    <svg class="w-12 h-12 mx-auto mb-2 opacity-80" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                                    </svg>
                                </div>
                            </div>

                            <!-- Department Content -->
                            <div class="p-6">
                                <h3 class="text-xl font-bold text-gray-900 mb-2">
                                    {department.name}
                                </h3>
                                <h4 class="text-lg text-orange-600 mb-4">
                                    {department.name_tamil}
                                </h4>
                                <p class="text-gray-600 mb-4">
                                    {department.description}
                                </p>

                                <!-- Department Head -->
                                <div class="bg-gray-50 rounded-lg p-4 mb-4">
                                    <h5 class="text-sm font-semibold text-gray-900 mb-1">
                                        துறைத் தலைவர்
                                    </h5>
                                    <p class="text-sm text-gray-700">
                                        {department.head.name}
                                    </p>
                                    <p class="text-xs text-orange-600">
                                        {department.head.position}
                                    </p>
                                </div>

                                <!-- Programs -->
                                <div class="mb-4">
                                    <h5 class="text-sm font-semibold text-gray-900 mb-2">
                                        முக்கிய திட்டங்கள்
                                    </h5>
                                    <ul class="space-y-1">
                                        {department.programs.slice(0, 3).map((program) => (
                                            <li class="text-sm text-gray-600 flex items-start">
                                                <svg class="w-3 h-3 text-orange-500 mr-2 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                                </svg>
                                                {program.name}
                                            </li>
                                        ))}
                                    </ul>
                                </div>

                                <!-- Contact -->
                                <div class="flex items-center justify-between text-xs text-gray-500">
                                    <span>{department.contact.email}</span>
                                    <span>{department.contact.phone}</span>
                                </div>

                                <button class="w-full mt-4 bg-orange-600 text-white py-2 px-4 rounded-lg hover:bg-orange-700 transition-colors">
                                    மேலும் விவரங்கள்
                                </button>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Featured Department Details -->
    <section class="py-16 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold text-gray-900 mb-4">
                    விரிவான துறை தகவல்கள்
                </h2>
                <p class="text-lg text-gray-600">
                    ஒவ்வொரு துறையின் சிறப்பு திட்டங்கள் மற்றும் சாதனைகள்
                </p>
            </div>

            <div class="space-y-16">
                {
                    departmentsContent.departments.slice(0, 2).map((department) => (
                        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
                            <!-- Department Info -->
                            <div>
                                <h3 class="text-2xl font-bold text-gray-900 mb-2">
                                    {department.name}
                                </h3>
                                <h4 class="text-xl text-orange-600 mb-4">
                                    {department.name_tamil}
                                </h4>
                                <p class="text-gray-700 mb-6">
                                    {department.description}
                                </p>

                                <!-- Programs List -->
                                <div class="mb-6">
                                    <h5 class="text-lg font-semibold text-gray-900 mb-3">
                                        திட்டங்கள்
                                    </h5>
                                    <div class="space-y-3">
                                        {department.programs.map((program) => (
                                            <div class="bg-orange-50 rounded-lg p-3">
                                                <h6 class="font-medium text-gray-900">
                                                    {program.name}
                                                </h6>
                                                <p class="text-sm text-orange-600 mb-1">
                                                    {program.name_tamil}
                                                </p>
                                                <p class="text-sm text-gray-600">
                                                    {program.description}
                                                </p>
                                            </div>
                                        ))}
                                    </div>
                                </div>

                                <!-- Contact Info -->
                                <div class="bg-gray-50 rounded-lg p-4">
                                    <h5 class="font-semibold text-gray-900 mb-2">
                                        தொடர்பு தகவல்
                                    </h5>
                                    <p class="text-sm text-gray-700 mb-1">
                                        மின்னஞ்சல்: {department.contact.email}
                                    </p>
                                    <p class="text-sm text-gray-700">
                                        தொலைபேசி: {department.contact.phone}
                                    </p>
                                </div>
                            </div>

                            <!-- Achievements -->
                            <div class="bg-gradient-to-br from-orange-50 to-amber-50 rounded-lg p-8">
                                <h5 class="text-xl font-bold text-gray-900 mb-6">
                                    சாதனைகள் மற்றும் புள்ளிவிவரங்கள்
                                </h5>
                                <div class="space-y-4">
                                    {department.achievements.map((achievement) => (
                                        <div class="flex items-start">
                                            <svg class="w-5 h-5 text-green-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                            </svg>
                                            <span class="text-gray-700">{achievement}</span>
                                        </div>
                                    ))}
                                </div>

                                <!-- Department Head Info -->
                                <div class="mt-6 pt-6 border-t border-orange-200">
                                    <h6 class="font-semibold text-gray-900 mb-2">
                                        துறைத் தலைவர்
                                    </h6>
                                    <p class="text-gray-700">
                                        {department.head.name}
                                    </p>
                                    <p class="text-sm text-orange-600">
                                        {department.head.position}
                                    </p>
                                </div>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Volunteer Opportunities -->
    <section class="py-16 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold text-gray-900 mb-4">
                    {departmentsContent.volunteer_opportunities.title}
                </h2>
                <h3 class="text-2xl font-medium text-orange-600 mb-6">
                    {departmentsContent.volunteer_opportunities.title_tamil}
                </h3>
                <p class="text-lg text-gray-600">
                    {departmentsContent.volunteer_opportunities.description}
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                {
                    departmentsContent.volunteer_opportunities.positions.map((position) => (
                        <div class="bg-white rounded-lg shadow-lg p-6 text-center">
                            <div class="w-16 h-16 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-4">
                                <svg class="w-8 h-8 text-orange-600" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M16 4c0-1.11.89-2 2-2s2 .89 2 2-.89 2-2 2-2-.89-2-2zm4 18v-6h2.5l-2.54-7.63A2.993 2.993 0 0 0 17.22 7c-.8 0-1.54.5-1.85 1.26l-1.92 5.76c-.05.16-.08.33-.08.51 0 .83.67 1.5 1.5 1.5H16v6h4zM12.5 11.5c.83 0 1.5-.67 1.5-1.5s-.67-1.5-1.5-1.5S11 9.17 11 10s.67 1.5 1.5 1.5zM5.5 6c1.11 0 2-.89 2-2s-.89-2-2-2-2 .89-2 2 .89 2 2 2zm2 16v-7H9V9.5C9 8.67 8.33 8 7.5 8S6 8.67 6 9.5V15H7.5v7h2z"/>
                                </svg>
                            </div>
                            <h3 class="text-lg font-semibold text-gray-900 mb-2">
                                {position.role}
                            </h3>
                            <h4 class="text-base text-orange-600 mb-3">
                                {position.role_tamil}
                            </h4>
                            <p class="text-sm text-gray-600 mb-3">
                                {position.description}
                            </p>
                            <div class="text-xs text-gray-500 mb-4">
                                நேர அர்ப்பணிப்பு: {position.commitment}
                            </div>
                            <button class="bg-orange-600 text-white px-4 py-2 rounded-lg hover:bg-orange-700 transition-colors text-sm">
                                விண்ணப்பிக்கவும்
                            </button>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Contact Information -->
    <section class="py-16 bg-white">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold text-gray-900 mb-4">
                    {departmentsContent.contact_info.title}
                </h2>
                <h3 class="text-2xl font-medium text-orange-600 mb-6">
                    {departmentsContent.contact_info.title_tamil}
                </h3>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <!-- General Contact -->
                <div class="bg-orange-50 rounded-lg p-6">
                    <h3 class="text-xl font-semibold text-gray-900 mb-4">
                        பொது தொடர்பு
                    </h3>
                    <div class="space-y-3">
                        <div class="flex items-center">
                            <svg class="w-5 h-5 text-orange-600 mr-3" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
                                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
                            </svg>
                            <span class="text-gray-700">
                                {departmentsContent.contact_info.general.email}
                            </span>
                        </div>
                        <div class="flex items-center">
                            <svg class="w-5 h-5 text-orange-600 mr-3" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
                            </svg>
                            <span class="text-gray-700">
                                {departmentsContent.contact_info.general.phone}
                            </span>
                        </div>
                        <div class="flex items-start">
                            <svg class="w-5 h-5 text-orange-600 mr-3 mt-1" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
                            </svg>
                            <div>
                                {departmentsContent.contact_info.general.address.map((line) => (
                                    <p class="text-gray-700">{line}</p>
                                ))}
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Office Hours -->
                <div class="bg-blue-50 rounded-lg p-6">
                    <h3 class="text-xl font-semibold text-gray-900 mb-4">
                        {departmentsContent.contact_info.office_hours.title}
                    </h3>
                    <h4 class="text-lg text-blue-600 mb-4">
                        {departmentsContent.contact_info.office_hours.title_tamil}
                    </h4>
                    <div class="space-y-2">
                        {departmentsContent.contact_info.office_hours.schedule.map((time) => (
                            <p class="text-gray-700">{time}</p>
                        ))}
                    </div>
                </div>
            </div>

            <div class="text-center mt-8">
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a
                        href={`mailto:${departmentsContent.contact_info.general.email}`}
                        class="bg-orange-600 text-white px-6 py-3 rounded-lg hover:bg-orange-700 transition-colors"
                    >
                        மின்னஞ்சல் அனுப்புங்கள்
                    </a>
                    <a
                        href={`tel:${departmentsContent.contact_info.general.phone}`}
                        class="bg-gray-600 text-white px-6 py-3 rounded-lg hover:bg-gray-700 transition-colors"
                    >
                        தொலைபேசியில் அழைக்கவும்
                    </a>
                </div>
            </div>
        </div>
    </section>
</Layout>

---
import Layout from "../../layouts/Layout.astro";
import DepartmentsPage from "../../components/Departmentpage.jsx";
import { getLangFromUrl, loadTina, loadContent } from "../../utils/i18n.js";

const lang = getLangFromUrl(Astro.url) || "en";

// Load TinaCMS data
const pageResponse = await loadTina(lang, "departments");
const siteConfig = await loadContent(lang, "site_config");

// Prepare props for the React component
const tinaProps = {
  data: pageResponse.data,
  query: pageResponse.query,
  variables: pageResponse.variables,
};
const departmentsData = (pageResponse.data as any)[`departments_${lang}`] || {};
---

<Layout
  title={`Departments - ${siteConfig.organization?.name}`}
  description={departmentsData.hero?.description || "Explore our community departments"}
  lang={lang}
>
  <DepartmentsPage
    props={tinaProps}
    lang={lang}
    client:load
  />
</Layout>

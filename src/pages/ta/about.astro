---
import Layout from "../../layouts/Layout.astro";
import { getLangFromUrl, loadContentSafe } from "../../utils/i18n";

const lang = getLangFromUrl(Astro.url) || "ta";
const aboutContent = await loadContentSafe(lang, "about");
const siteConfig = await loadContentSafe(lang, "site_config");
---

<Layout
    title={`${aboutContent.hero?.title ?? ""} - ${siteConfig.organization?.name ?? ""}`}
    description={aboutContent.hero?.description ?? ""}
    lang={lang}
>
    <!-- Page Header -->
    <section
        class="bg-gradient-to-br from-orange-600 via-red-600 to-amber-600 text-white relative overflow-hidden"
    >
        <div class="absolute inset-0 opacity-10">
            <div
                class="absolute top-0 left-0 w-full h-full"
                style="background-image: radial-gradient(circle, white 1px, transparent 1px); background-size: 20px 20px;"
            >
            </div>
        </div>
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 relative">
            <div class="max-w-3xl">
                <h1 class="text-4xl lg:text-5xl font-bold mb-4">
                    {aboutContent.hero?.title}
                </h1>
                <h2
                    class="text-2xl lg:text-3xl font-medium text-orange-100 mb-6"
                >
                    {aboutContent.hero?.title_tamil}
                </h2>
                <p class="text-xl text-orange-100">
                    {aboutContent.hero?.description}
                </p>
            </div>
        </div>
    </section>

    <!-- Mission & Vision -->
    <section class="py-16 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
                <!-- Mission -->
                <div class="bg-orange-50 rounded-lg p-8">
                    <h2 class="text-3xl font-bold text-gray-900 mb-4">
                        {aboutContent.mission?.title}
                    </h2>
                    <h3 class="text-2xl font-medium text-orange-600 mb-6">
                        {aboutContent.mission?.title_tamil}
                    </h3>
                    <p class="text-gray-700 leading-relaxed">
                        {aboutContent.mission?.content}
                    </p>
                </div>

                <!-- Vision -->
                <div class="bg-blue-50 rounded-lg p-8">
                    <h2 class="text-3xl font-bold text-gray-900 mb-4">
                        {aboutContent.vision?.title}
                    </h2>
                    <h3 class="text-2xl font-medium text-blue-600 mb-6">
                        {aboutContent.vision?.title_tamil}
                    </h3>
                    <p class="text-gray-700 leading-relaxed">
                        {aboutContent.vision?.content}
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Values -->
    <section class="py-16 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold text-gray-900 mb-4">
                    எங்கள் மதிப்புகள்
                </h2>
                <p class="text-lg text-gray-600">
                    எங்களை வழிநடத்தும் கொள்கைகள்
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                {
                    aboutContent.values?.map((value) => (
                        <div class="bg-white rounded-lg shadow-lg p-6 text-center">
                            <div class="w-16 h-16 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-4">
                                <svg
                                    class="w-8 h-8 text-orange-600"
                                    fill="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
                                </svg>
                            </div>
                            <h3 class="text-xl font-semibold text-gray-900 mb-3">
                                {value.title}
                            </h3>
                            <h4 class="text-lg text-orange-600 mb-3">
                                {value.title_tamil}
                            </h4>
                            <p class="text-gray-600">{value.description}</p>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- History -->
    <section class="py-16 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold text-gray-900 mb-4">
                    {aboutContent.history?.title}
                </h2>
                <h3 class="text-2xl font-medium text-orange-600 mb-6">
                    {aboutContent.history?.title_tamil}
                </h3>
                <p class="text-lg text-gray-600 max-w-3xl mx-auto">
                    {aboutContent.history?.content}
                </p>
            </div>

            <div class="relative">
                <div
                    class="absolute left-1/2 transform -translate-x-px h-full w-0.5 bg-orange-200"
                >
                </div>

                <div class="space-y-12">
                    {
                        aboutContent.history?.milestones?.map(
                            (milestone, index) => (
                                <div
                                    class={`relative flex items-center ${index % 2 === 0 ? "justify-start" : "justify-end"}`}
                                >
                                    <div
                                        class={`w-full max-w-md ${index % 2 === 0 ? "pr-8" : "pl-8"}`}
                                    >
                                        <div class="bg-white border border-orange-200 rounded-lg p-6 shadow-lg">
                                            <div class="flex items-center justify-between mb-3">
                                                <span class="text-2xl font-bold text-orange-600">
                                                    {milestone.year}
                                                </span>
                                            </div>
                                            <h3 class="text-lg font-semibold text-gray-900 mb-2">
                                                {milestone.title}
                                            </h3>
                                            <p class="text-gray-600">
                                                {milestone.description}
                                            </p>
                                        </div>
                                    </div>

                                    <div class="absolute left-1/2 transform -translate-x-1/2 w-4 h-4 bg-orange-600 rounded-full border-4 border-white shadow" />
                                </div>
                            ),
                        )
                    }
                </div>
            </div>
        </div>
    </section>

    <!-- Leadership -->
    <section class="py-16 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold text-gray-900 mb-4">
                    {aboutContent.leadership?.title}
                </h2>
                <h3 class="text-2xl font-medium text-orange-600 mb-6">
                    {aboutContent.leadership?.title_tamil}
                </h3>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                {
                    aboutContent.leadership?.board_members?.map((member) => (
                        <div class="bg-white rounded-lg shadow-lg p-6 text-center">
                            <div class="w-20 h-20 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-4">
                                <svg
                                    class="w-10 h-10 text-orange-600"
                                    fill="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" />
                                </svg>
                            </div>
                            <h3 class="text-lg font-semibold text-gray-900 mb-1">
                                {member.name}
                            </h3>
                            <h4 class="text-base text-orange-600 mb-2">
                                {member.name_tamil}
                            </h4>
                            <p class="text-sm font-medium text-gray-700 mb-3">
                                {member.position}
                            </p>
                            <p class="text-xs text-gray-600">{member.bio}</p>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Programs -->
    <section class="py-16 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold text-gray-900 mb-4">
                    {aboutContent.programs?.title}
                </h2>
                <h3 class="text-2xl font-medium text-orange-600 mb-6">
                    {aboutContent.programs?.title_tamil}
                </h3>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {
                    aboutContent.programs?.list?.map((program) => (
                        <div class="bg-orange-50 rounded-lg p-6">
                            <h3 class="text-xl font-semibold text-gray-900 mb-2">
                                {program.name}
                            </h3>
                            <h4 class="text-lg text-orange-600 mb-3">
                                {program.name_tamil}
                            </h4>
                            <p class="text-gray-700">{program.description}</p>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Achievements -->
    <section class="py-16 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold text-gray-900 mb-4">
                    {aboutContent.achievements?.title}
                </h2>
                <h3 class="text-2xl font-medium text-orange-600 mb-6">
                    {aboutContent.achievements?.title_tamil}
                </h3>
            </div>

            <!-- Statistics -->
            <div
                class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12"
            >
                {
                    aboutContent.achievements?.stats?.map((stat) => (
                        <div class="text-center">
                            <div class="text-4xl font-bold text-orange-600 mb-2">
                                {stat.number}
                            </div>
                            <p class="text-lg font-medium text-gray-900">
                                {stat.label}
                            </p>
                            <p class="text-base text-gray-600">
                                {stat.label_tamil}
                            </p>
                        </div>
                    ))
                }
            </div>

            <!-- Awards -->
            <div class="bg-white rounded-lg shadow-lg p-8">
                <h3 class="text-2xl font-bold text-gray-900 mb-6 text-center">
                    விருதுகள் மற்றும் அங்கீகாரங்கள்
                </h3>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    {
                        aboutContent.achievements?.awards?.map((award) => (
                            <div class="text-center p-4 border border-orange-200 rounded-lg">
                                <div class="w-12 h-12 bg-yellow-100 rounded-full flex items-center justify-center mx-auto mb-3">
                                    <svg
                                        class="w-6 h-6 text-yellow-600"
                                        fill="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
                                    </svg>
                                </div>
                                <h4 class="font-semibold text-gray-900 mb-2">
                                    {award.title}
                                </h4>
                                <p class="text-sm text-gray-600 mb-1">
                                    {award.organization}
                                </p>
                                <p class="text-sm font-medium text-orange-600">
                                    {award.year}
                                </p>
                            </div>
                        ))
                    }
                </div>
            </div>
        </div>
    </section>

    <!-- Contact -->
    <section class="py-16 bg-white">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold text-gray-900 mb-4">
                    {aboutContent.contact?.title}
                </h2>
                <h3 class="text-2xl font-medium text-orange-600 mb-6">
                    {aboutContent.contact?.title_tamil}
                </h3>
                <p class="text-lg text-gray-600">
                    {aboutContent.contact?.description}
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <!-- Address -->
                <div class="bg-gray-50 rounded-lg p-6">
                    <h3 class="text-xl font-semibold text-gray-900 mb-4">
                        {aboutContent.contact?.address?.title}
                    </h3>
                    <div class="space-y-2">
                        {
                            aboutContent.contact?.address?.lines?.map(
                                (line) => <p class="text-gray-700">{line}</p>,
                            )
                        }
                    </div>
                </div>

                <!-- Office Hours -->
                <div class="bg-gray-50 rounded-lg p-6">
                    <h3 class="text-xl font-semibold text-gray-900 mb-4">
                        {aboutContent.contact?.hours?.title}
                    </h3>
                    <div class="space-y-2">
                        {
                            aboutContent.contact?.hours?.schedule?.map(
                                (time) => <p class="text-gray-700">{time}</p>,
                            )
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="text-center mt-8">
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
                href="mailto:info@thamizhi.org"
                class="bg-orange-600 text-white px-6 py-3 rounded-lg hover:bg-orange-700 transition-colors"
            >
                மின்னஞ்சல் அனுப்புங்கள்
            </a>
            <a
                href="tel:+15551234500"
                class="bg-gray-600 text-white px-6 py-3 rounded-lg hover:bg-gray-700 transition-colors"
            >
                தொலைபேசியில் அழைக்கவும்
            </a>
        </div>
    </div>
</Layout>

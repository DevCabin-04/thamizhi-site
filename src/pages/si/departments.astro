---
import Layout from "../../layouts/Layout.astro";
import { getLangFromUrl, loadContentSafe } from "../../utils/i18n";

const lang = getLangFromUrl(Astro.url) || "si";
const departmentsContent = await loadContentSafe(lang, "departments");
const siteConfig = await loadContentSafe(lang, "site_config");
---

<Layout
    title={`${departmentsContent.hero?.title} - ${siteConfig.organization?.name}`}
    description={departmentsContent.hero?.description}
    lang={lang}
>
    <!-- Page Header -->
    <section
        class="bg-gradient-to-br from-orange-600 via-red-600 to-amber-600 text-white relative overflow-hidden"
    >
        <!-- Decorative Pattern -->
        <div class="absolute inset-0 opacity-10">
            <div
                class="absolute inset-0"
                style='background-image: url(&apos;data:image/svg+xml,<svg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"><g fill="none" fill-rule="evenodd"><g fill="%23ffffff" fill-opacity="0.1"><circle cx="7" cy="7" r="7"></circle><circle cx="53" cy="7" r="7"></circle><circle cx="7" cy="53" r="7"></circle><circle cx="53" cy="53" r="7"></circle></g></g></svg>&apos;); background-size: 60px 60px;'
            >
            </div>
        </div>
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 relative">
            <div class="max-w-3xl">
                <h1 class="text-4xl lg:text-5xl font-bold mb-4">
                    {departmentsContent.hero?.title}
                </h1>
                <h2
                    class="text-2xl lg:text-3xl font-medium text-orange-100 mb-6"
                >
                    {departmentsContent.hero?.subtitle}
                </h2>
                <p class="text-lg text-orange-200">
                    {departmentsContent.hero?.description}
                </p>
            </div>
        </div>
    </section>

    <!-- Departments Overview -->
    <section class="py-16 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {
                    departmentsContent.departments?.map((dept) => (
                        <div class="bg-gray-50 rounded-lg overflow-hidden hover:shadow-lg transition-shadow">
                            <div
                                class={`h-2 ${dept.color || "bg-orange-500"}`}
                            />
                            <div class="p-6">
                                <h3 class="text-xl font-bold text-gray-900 mb-3">
                                    {dept.name}
                                </h3>
                                <p class="text-gray-600 mb-4">
                                    {dept.description}
                                </p>
                                <div class="flex items-center text-sm text-gray-500 mb-4">
                                    <svg
                                        class="w-4 h-4 mr-2"
                                        fill="currentColor"
                                        viewBox="0 0 20 20"
                                    >
                                        <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z" />
                                    </svg>
                                    <span>
                                        {dept.programs?.length || 0} වැඩසටහන්
                                    </span>
                                </div>
                                <a
                                    href={`#${dept.id}`}
                                    class="inline-flex items-center text-orange-600 hover:text-orange-700 font-medium"
                                >
                                    වැඩිදුර දැනගන්න
                                    <svg
                                        class="w-4 h-4 ml-1"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M9 5l7 7-7 7"
                                        />
                                    </svg>
                                </a>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Detailed Department Sections -->
    {
        departmentsContent.departments?.map((dept) => (
            <section
                id={dept.id}
                class={`py-16 ${
                    dept.id === "cultural" || dept.id === "youth"
                        ? "bg-white"
                        : "bg-gray-50"
                }`}
            >
                <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                    <div class="text-center mb-12">
                        <div
                            class={`w-16 h-16 bg-gradient-to-br ${dept.color} rounded-full flex items-center justify-center mx-auto mb-6`}
                        >
                            <svg
                                class="w-8 h-8 text-white"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                            >
                                {dept.id === "cultural" && (
                                    <path d="M12 3v10.55c-.59-.34-1.27-.55-2-.55-2.21 0-4 1.79-4 4s1.79 4 4 4 4-1.79 4-4V7h4V3h-6z" />
                                )}
                                {dept.id === "education" && (
                                    <path d="M5 13.18v4L12 21l7-3.82v-4L12 17l-7-3.82zM12 3L1 9l11 6 9-4.91V17h2V9L12 3z" />
                                )}
                                {dept.id === "community" && (
                                    <path d="M16 4c0-1.11.89-2 2-2s2 .89 2 2-.89 2-2 2-2-.89-2-2zm4 18v-6h2.5l-2.54-7.63A1.003 1.003 0 0 0 18.97 8H16.8c-.41 0-.8.17-1.09.45L14 10.07 12.3 8.45c-.3-.28-.68-.45-1.09-.45H8.03c-.46 0-.9.3-1.05.76L4.5 16H7v6h2v-4h2v4h2v-6h2.5l.5 1.5V22h2z" />
                                )}
                                {dept.id === "youth" && (
                                    <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" />
                                )}
                            </svg>
                        </div>
                        <h2 class="text-3xl font-bold text-gray-900 mb-4">
                            {dept.name}
                        </h2>
                        <p class="text-lg text-gray-600 max-w-3xl mx-auto">
                            {dept.detailed_description}
                        </p>
                    </div>

                    {/* Programs Grid */}
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
                        {dept.programs?.map((program) => (
                            <div class="bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition-shadow">
                                <h3 class="text-xl font-semibold text-gray-900 mb-3">
                                    {program.name}
                                </h3>
                                <p class="text-gray-600 mb-4">
                                    {program.description}
                                </p>
                                <div class="space-y-2 text-sm text-gray-500">
                                    <div class="flex items-center">
                                        <svg
                                            class="w-4 h-4 mr-2"
                                            fill="currentColor"
                                            viewBox="0 0 20 20"
                                        >
                                            <path
                                                fill-rule="evenodd"
                                                d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z"
                                                clip-rule="evenodd"
                                            />
                                        </svg>
                                        <span>{program.schedule}</span>
                                    </div>
                                    {program.instructor && (
                                        <div class="flex items-center">
                                            <svg
                                                class="w-4 h-4 mr-2"
                                                fill="currentColor"
                                                viewBox="0 0 20 20"
                                            >
                                                <path
                                                    fill-rule="evenodd"
                                                    d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"
                                                    clip-rule="evenodd"
                                                />
                                            </svg>
                                            <span>{program.instructor}</span>
                                        </div>
                                    )}
                                    {program.coordinator && (
                                        <div class="flex items-center">
                                            <svg
                                                class="w-4 h-4 mr-2"
                                                fill="currentColor"
                                                viewBox="0 0 20 20"
                                            >
                                                <path
                                                    fill-rule="evenodd"
                                                    d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"
                                                    clip-rule="evenodd"
                                                />
                                            </svg>
                                            <span>{program.coordinator}</span>
                                        </div>
                                    )}
                                </div>
                            </div>
                        ))}
                    </div>

                    {/* Contact Information */}
                    <div class="bg-gray-100 rounded-lg p-6">
                        <h4 class="text-lg font-semibold text-gray-900 mb-4">
                            සම්බන්ධීකාරක තොරතුරු
                        </h4>
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm">
                            <div>
                                <span class="font-medium text-gray-700">
                                    සම්බන්ධීකාරක:
                                </span>
                                <br />
                                {dept.contact?.coordinator}
                            </div>
                            <div class="space-y-3">
                                <div class="flex items-center">
                                    <svg
                                        class="w-4 h-4 text-gray-500 mr-3"
                                        fill="currentColor"
                                        viewBox="0 0 20 20"
                                    >
                                        <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                                        <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                                    </svg>
                                    <a
                                        href={`mailto:${dept.contact?.email}`}
                                        class="text-sm text-gray-700 hover:text-orange-600"
                                    >
                                        {dept.contact?.email}
                                    </a>
                                </div>
                                <div class="flex items-center">
                                    <svg
                                        class="w-4 h-4 text-gray-500 mr-3"
                                        fill="currentColor"
                                        viewBox="0 0 20 20"
                                    >
                                        <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
                                    </svg>
                                    <a
                                        href={`tel:${dept.contact?.phone}`}
                                        class="text-sm text-gray-700 hover:text-orange-600"
                                    >
                                        {dept.contact?.phone}
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        ))
    }

    <!-- Volunteer Opportunities -->
    <section class="py-16 bg-gray-100">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold text-gray-900 mb-4">
                    {departmentsContent.volunteer_opportunities?.title}
                </h2>
                <p class="text-lg text-gray-600 max-w-2xl mx-auto">
                    {departmentsContent.volunteer_opportunities?.description}
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                {
                    departmentsContent.volunteer_opportunities?.opportunities?.map(
                        (opportunity) => (
                            <div class="bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
                                <h4 class="text-lg font-semibold text-gray-900 mb-2">
                                    {opportunity.title}
                                </h4>
                                <p class="text-gray-600 text-sm mb-3">
                                    {opportunity.description}
                                </p>
                                <div class="text-xs text-gray-500 space-y-1">
                                    <p>
                                        <strong>කැපවීම:</strong>{" "}
                                        {opportunity.commitment}
                                    </p>
                                    <p>
                                        <strong>අවශ්‍යතා:</strong>{" "}
                                        {opportunity.requirements}
                                    </p>
                                </div>
                                <button class="mt-4 w-full bg-orange-600 text-white py-2 px-4 rounded-lg text-sm hover:bg-orange-700 transition-colors">
                                    අයදුම් කරන්න
                                </button>
                            </div>
                        ),
                    )
                }
            </div>
        </div>
    </section>

    <!-- Call to Action -->
    <section class="py-16 bg-orange-50">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">
                වැඩසටහනකට සම්බන්ධ වන්න
            </h2>
            <p class="text-lg text-gray-600 mb-8">
                ඔබගේ රුචිකත්වයන්ට සහ ලබාගත හැකි කාලයට ගැළපෙන වැඩසටහනක් සොයා
                ගන්න.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <button
                    class="bg-orange-600 text-white px-8 py-3 rounded-lg hover:bg-orange-700 transition-colors"
                >
                    වැඩසටහනකට ලියාපදිංචි වන්න
                </button>
                <button
                    class="border border-gray-300 text-gray-700 px-8 py-3 rounded-lg hover:bg-gray-50 transition-colors"
                >
                    සම්බන්ධීකාරකයින් සමඟ කතා කරන්න
                </button>
            </div>
        </div>
    </section>
</Layout>

---
import Layout from "../layouts/Layout.astro";
import { getLangFromUrl, loadContent } from "../utils/i18n.js";

const lang = getLangFromUrl(Astro.url) || "en";
const departmentsContent = await loadContent(lang, "departments");
const siteConfig = await loadContent(lang, "site_config");
---

<Layout
    title={`Departments - ${siteConfig.organization?.name}`}
    description={departmentsContent.hero?.description}
    lang={lang}
>
    <!-- Page Header -->
    <section
        class="bg-gradient-to-br from-orange-600 via-red-600 to-amber-600 text-white relative overflow-hidden"
    >
        <div class="absolute inset-0 opacity-10">
            <div
                class="absolute top-0 left-0 w-full h-full"
                style="background-image: radial-gradient(circle, white 1px, transparent 1px); background-size: 20px 20px;"
            >
            </div>
        </div>
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 relative">
            <div class="max-w-3xl">
                <h1 class="text-4xl lg:text-5xl font-bold mb-4">
                    {departmentsContent.hero?.title}
                </h1>
                <h2
                    class="text-2xl lg:text-3xl font-medium text-orange-100 mb-6"
                >
                    {departmentsContent.hero?.title_tamil}
                </h2>
                <p class="text-xl text-orange-100 mb-4">
                    {departmentsContent.hero?.subtitle}
                </p>
                <p class="text-lg text-orange-200">
                    {departmentsContent.hero?.subtitle_tamil}
                </p>
            </div>
        </div>
    </section>

    <!-- Departments Overview -->
    <section class="py-16 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <p class="text-xl text-gray-600 max-w-3xl mx-auto">
                    {departmentsContent.hero?.description}
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {
                    departmentsContent.departments?.map((dept) => (
                        <div class="bg-gray-50 rounded-lg overflow-hidden hover:shadow-lg transition-shadow">
                            <div
                                class={`h-2 ${
                                    dept.color === "orange"
                                        ? "bg-orange-500"
                                        : dept.color === "blue"
                                          ? "bg-blue-500"
                                          : dept.color === "green"
                                            ? "bg-green-500"
                                            : dept.color === "purple"
                                              ? "bg-purple-500"
                                              : dept.color === "pink"
                                                ? "bg-pink-500"
                                                : "bg-indigo-500"
                                }`}
                            />
                            <div class="p-6">
                                <div class="flex items-center mb-4">
                                    <div
                                        class={`w-12 h-12 rounded-lg flex items-center justify-center mr-4 ${
                                            dept.color === "orange"
                                                ? "bg-orange-100"
                                                : dept.color === "blue"
                                                  ? "bg-blue-100"
                                                  : dept.color === "green"
                                                    ? "bg-green-100"
                                                    : dept.color === "purple"
                                                      ? "bg-purple-100"
                                                      : dept.color === "pink"
                                                        ? "bg-pink-100"
                                                        : "bg-indigo-100"
                                        }`}
                                    >
                                        <svg
                                            class={`w-6 h-6 ${
                                                dept.color === "orange"
                                                    ? "text-orange-600"
                                                    : dept.color === "blue"
                                                      ? "text-blue-600"
                                                      : dept.color === "green"
                                                        ? "text-green-600"
                                                        : dept.color === "purple"
                                                          ? "text-purple-600"
                                                          : dept.color === "pink"
                                                            ? "text-pink-600"
                                                            : "text-indigo-600"
                                            }`}
                                            fill="currentColor"
                                            viewBox="0 0 20 20"
                                        >
                                            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                        </svg>
                                    </div>
                                    <div>
                                        <h3 class="text-xl font-semibold text-gray-900">
                                            {dept.name}
                                        </h3>
                                        <h4 class="text-lg font-medium text-orange-600">
                                            {dept.name_tamil}
                                        </h4>
                                    </div>
                                </div>

                                <p class="text-gray-600 mb-4">
                                    {dept.short_description}
                                </p>

                                <div class="mb-4">
                                    <h5 class="font-semibold text-gray-900 mb-2">
                                        Department Head:
                                    </h5>
                                    <p class="text-gray-700">
                                        {dept.head.name} ({dept.head.name_tamil})
                                    </p>
                                    <p class="text-sm text-gray-600">
                                        {dept.head.title} | {dept.head.title_tamil}
                                    </p>
                                </div>

                                <div class="mb-4">
                                    <h5 class="font-semibold text-gray-900 mb-2">
                                        Key Programs:
                                    </h5>
                                    <ul class="text-sm text-gray-600 space-y-1">
                                        {dept.programs.slice(0, 3).map((program) => (
                                            <li class="flex items-center">
                                                <svg
                                                    class="w-3 h-3 text-green-500 mr-2"
                                                    fill="currentColor"
                                                    viewBox="0 0 20 20"
                                                >
                                                    <path
                                                        fill-rule="evenodd"
                                                        d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                                        clip-rule="evenodd"
                                                    />
                                                </svg>
                                                {program.name}
                                            </li>
                                        ))}
                                    </ul>
                                </div>

                                <div class="flex justify-between items-center">
                                    <a
                                        href={`#${dept.id}`}
                                        class={`text-sm font-medium hover:underline ${
                                            dept.color === "orange"
                                                ? "text-orange-600"
                                                : dept.color === "blue"
                                                  ? "text-blue-600"
                                                  : dept.color === "green"
                                                    ? "text-green-600"
                                                    : dept.color === "purple"
                                                      ? "text-purple-600"
                                                      : dept.color === "pink"
                                                        ? "text-pink-600"
                                                        : "text-indigo-600"
                                        }`}
                                    >
                                        Learn More →
                                    </a>
                                    <a
                                        href={`mailto:${dept.contact.email}`}
                                        class="text-sm text-gray-500 hover:text-gray-700"
                                    >
                                        Contact
                                    </a>
                                </div>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Detailed Department Sections -->
    {
        departmentsContent.departments?.map((dept) => (
            <section
                id={dept.id}
                class={`py-16 ${
                    dept.color === "orange"
                        ? "bg-orange-50"
                        : dept.color === "blue"
                          ? "bg-blue-50"
                          : dept.color === "green"
                            ? "bg-green-50"
                            : dept.color === "purple"
                              ? "bg-purple-50"
                              : dept.color === "pink"
                                ? "bg-pink-50"
                                : "bg-indigo-50"
                }`}
            >
                <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
                        <!-- Department Info -->
                        <div class="lg:col-span-2">
                            <h2 class="text-3xl font-bold text-gray-900 mb-4">
                                {dept.name}
                            </h2>
                            <h3 class="text-2xl font-medium text-orange-600 mb-6">
                                {dept.name_tamil}
                            </h3>
                            <p class="text-lg text-gray-700 mb-8">
                                {dept.description}
                            </p>
                            <p class="text-gray-600 mb-8">
                                {dept.description_tamil}
                            </p>

                            <!-- Programs -->
                            <h4 class="text-xl font-semibold text-gray-900 mb-6">
                                Programs & Classes
                            </h4>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                                {dept.programs.map((program) => (
                                    <div class="bg-white rounded-lg p-6 shadow-sm">
                                        <h5 class="text-lg font-semibold text-gray-900 mb-2">
                                            {program.name}
                                        </h5>
                                        <h6 class="text-md font-medium text-orange-600 mb-3">
                                            {program.name_tamil}
                                        </h6>
                                        <p class="text-gray-600 text-sm mb-3">
                                            {program.description}
                                        </p>
                                        <div class="text-xs text-gray-500 space-y-1">
                                            <p>
                                                <strong>Age Group:</strong>{" "}
                                                {program.age_group}
                                            </p>
                                            <p>
                                                <strong>Schedule:</strong>{" "}
                                                {program.schedule}
                                            </p>
                                        </div>
                                    </div>
                                ))}
                            </div>
                        </div>

                        <!-- Sidebar -->
                        <div class="lg:col-span-1">
                            <!-- Department Head -->
                            <div class="bg-white rounded-lg p-6 shadow-sm mb-6">
                                <h4 class="text-lg font-semibold text-gray-900 mb-4">
                                    Department Head
                                </h4>
                                <div class="flex items-center mb-4">
                                    <div
                                        class={`w-16 h-16 rounded-full flex items-center justify-center text-white font-bold text-xl ${
                                            dept.color === "orange"
                                                ? "bg-orange-500"
                                                : dept.color === "blue"
                                                  ? "bg-blue-500"
                                                  : dept.color === "green"
                                                    ? "bg-green-500"
                                                    : dept.color === "purple"
                                                      ? "bg-purple-500"
                                                      : dept.color === "pink"
                                                        ? "bg-pink-500"
                                                        : "bg-indigo-500"
                                        }`}
                                    >
                                        {dept.head.name
                                            .split(" ")
                                            .map((n) => n[0])
                                            .join("")}
                                    </div>
                                    <div class="ml-4">
                                        <h5 class="font-semibold text-gray-900">
                                            {dept.head.name}
                                        </h5>
                                        <p class="text-orange-600 font-medium">
                                            {dept.head.name_tamil}
                                        </p>
                                        <p class="text-sm text-gray-600">
                                            {dept.head.title}
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <!-- Achievements -->
                            <div class="bg-white rounded-lg p-6 shadow-sm mb-6">
                                <h4 class="text-lg font-semibold text-gray-900 mb-4">
                                    Key Achievements
                                </h4>
                                <ul class="space-y-2">
                                    {dept.achievements.map((achievement) => (
                                        <li class="flex items-start">
                                            <svg
                                                class="w-4 h-4 text-green-500 mt-1 mr-3 flex-shrink-0"
                                                fill="currentColor"
                                                viewBox="0 0 20 20"
                                            >
                                                <path
                                                    fill-rule="evenodd"
                                                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                                    clip-rule="evenodd"
                                                />
                                            </svg>
                                            <span class="text-sm text-gray-700">
                                                {achievement}
                                            </span>
                                        </li>
                                    ))}
                                </ul>
                            </div>

                            <!-- Contact -->
                            <div class="bg-white rounded-lg p-6 shadow-sm">
                                <h4 class="text-lg font-semibold text-gray-900 mb-4">
                                    Contact Information
                                </h4>
                                <div class="space-y-3">
                                    <div class="flex items-center">
                                        <svg
                                            class="w-4 h-4 text-gray-500 mr-3"
                                            fill="currentColor"
                                            viewBox="0 0 20 20"
                                        >
                                            <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                                            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                                        </svg>
                                        <a
                                            href={`mailto:${dept.contact.email}`}
                                            class="text-sm text-gray-700 hover:text-orange-600"
                                        >
                                            {dept.contact.email}
                                        </a>
                                    </div>
                                    <div class="flex items-center">
                                        <svg
                                            class="w-4 h-4 text-gray-500 mr-3"
                                            fill="currentColor"
                                            viewBox="0 0 20 20"
                                        >
                                            <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
                                        </svg>
                                        <a
                                            href={`tel:${dept.contact.phone}`}
                                            class="text-sm text-gray-700 hover:text-orange-600"
                                        >
                                            {dept.contact.phone}
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        ))
    }

    <!-- Volunteer Opportunities -->
    <section class="py-16 bg-gray-100">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold text-gray-900 mb-4">
                    {departmentsContent.volunteer_opportunities?.title}
                </h2>
                <h3 class="text-2xl font-medium text-orange-600 mb-6">
                    {departmentsContent.volunteer_opportunities?.title_tamil}
                </h3>
                <p class="text-lg text-gray-600 max-w-2xl mx-auto">
                    {departmentsContent.volunteer_opportunities?.description}
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                {
                    departmentsContent.volunteer_opportunities?.opportunities?.map(
                        (opportunity) => (
                            <div class="bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
                                <h4 class="text-lg font-semibold text-gray-900 mb-2">
                                    {opportunity.role}
                                </h4>
                                <h5 class="text-md font-medium text-orange-600 mb-3">
                                    {opportunity.role_tamil}
                                </h5>
                                <p class="text-gray-600 text-sm mb-3">
                                    {opportunity.description}
                                </p>
                                <div class="text-xs text-gray-500 mb-4">
                                    <strong>Time Commitment:</strong>{" "}
                                    {opportunity.time_commitment}
                                </div>
                                <a
                                    href="/volunteer"
                                    class="text-orange-600 font-medium text-sm hover:text-orange-800"
                                >
                                    Apply Now →
                                </a>
                            </div>
                        ),
                    )
                }
            </div>
        </div>
    </section>

    <!-- Call to Action -->
    <section
        class="py-16 bg-gradient-to-r from-orange-600 to-red-600 text-white"
    >
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <h2 class="text-3xl font-bold mb-4">Get Involved Today</h2>
            <h3 class="text-2xl font-medium mb-6">இன்றே பங்கேற்கவும்</h3>
            <p class="text-xl text-orange-100 mb-8">
                Join one of our departments and help preserve Tamil culture
                while building a stronger community.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a
                    href="/membership"
                    class="bg-white text-orange-600 px-8 py-3 rounded-lg font-medium hover:bg-orange-50 transition-colors"
                >
                    Become a Member
                </a>
                <a
                    href="/volunteer"
                    class="border-2 border-white text-white px-8 py-3 rounded-lg font-medium hover:bg-white hover:text-orange-600 transition-colors"
                >
                    Volunteer With Us
                </a>
            </div>
        </div>
    </section>
</Layout>

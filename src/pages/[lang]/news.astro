---
import Layout from "../../layouts/Layout.astro";
---

<Layout
    title="News & Updates - Official Government Site"
    description="Latest government news, announcements, and policy updates from official sources."
>
    <!-- Page Header -->
    <section class="bg-blue-800 text-white py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="max-w-3xl">
                <h1 class="text-4xl font-bold mb-4">News & Updates</h1>
                <p class="text-xl text-blue-100">
                    Stay informed with the latest government announcements, policy updates, and important news affecting citizens.
                </p>
            </div>
        </div>
    </section>

    <!-- Filter Bar -->
    <section class="bg-white py-6 border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
                <div class="flex flex-wrap gap-2">
                    <button class="px-4 py-2 bg-blue-600 text-white rounded-lg text-sm font-medium">
                        All News
                    </button>
                    <button class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg text-sm font-medium hover:bg-gray-200">
                        Announcements
                    </button>
                    <button class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg text-sm font-medium hover:bg-gray-200">
                        Policy Updates
                    </button>
                    <button class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg text-sm font-medium hover:bg-gray-200">
                        Press Releases
                    </button>
                    <button class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg text-sm font-medium hover:bg-gray-200">
                        Emergency Alerts
                    </button>
                </div>
                <div class="relative">
                    <input
                        type="text"
                        placeholder="Search news..."
                        class="pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    />
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <svg class="h-4 w-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"></path>
                        </svg>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Featured News -->
    <section class="py-12 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-8">Featured News</h2>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-12">
                <!-- Main Featured Article -->
                <article class="bg-white rounded-lg shadow-sm overflow-hidden">
                    <div class="aspect-w-16 aspect-h-9 bg-gray-200">
                        <div class="w-full h-48 bg-gradient-to-r from-blue-600 to-blue-800 flex items-center justify-center">
                            <svg class="w-16 h-16 text-white opacity-50" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"></path>
                            </svg>
                        </div>
                    </div>
                    <div class="p-6">
                        <div class="flex items-center text-sm text-gray-500 mb-3">
                            <span class="bg-red-100 text-red-800 px-2 py-1 rounded text-xs font-medium mr-3">
                                BREAKING NEWS
                            </span>
                            <time datetime="2024-01-16">January 16, 2024</time>
                        </div>
                        <h3 class="text-2xl font-bold text-gray-900 mb-3">
                            Major Infrastructure Investment Bill Signed Into Law
                        </h3>
                        <p class="text-gray-600 mb-4">
                            President signs historic $2 trillion infrastructure bill focusing on roads, bridges, broadband, and clean energy initiatives across all 50 states.
                        </p>
                        <a href="/news/infrastructure-bill-signed" class="inline-flex items-center text-blue-600 font-medium hover:text-blue-800">
                            Read full story
                            <svg class="w-4 h-4 ml-1" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                            </svg>
                        </a>
                    </div>
                </article>

                <!-- Secondary Featured Articles -->
                <div class="space-y-6">
                    <article class="bg-white rounded-lg shadow-sm p-6">
                        <div class="flex items-center text-sm text-gray-500 mb-3">
                            <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded text-xs font-medium mr-3">
                                ANNOUNCEMENT
                            </span>
                            <time datetime="2024-01-15">January 15, 2024</time>
                        </div>
                        <h4 class="text-xl font-semibold text-gray-900 mb-2">
                            New Digital Services Platform Goes Live
                        </h4>
                        <p class="text-gray-600 mb-3">
                            Citizens can now access over 200 government services through our unified digital platform.
                        </p>
                        <a href="/news/digital-platform-launch" class="text-blue-600 font-medium hover:text-blue-800">
                            Learn more →
                        </a>
                    </article>

                    <article class="bg-white rounded-lg shadow-sm p-6">
                        <div class="flex items-center text-sm text-gray-500 mb-3">
                            <span class="bg-green-100 text-green-800 px-2 py-1 rounded text-xs font-medium mr-3">
                                POLICY UPDATE
                            </span>
                            <time datetime="2024-01-14">January 14, 2024</time>
                        </div>
                        <h4 class="text-xl font-semibold text-gray-900 mb-2">
                            Enhanced Privacy Protection Measures
                        </h4>
                        <p class="text-gray-600 mb-3">
                            New regulations strengthen data protection while maintaining transparency.
                        </p>
                        <a href="/news/privacy-protection-update" class="text-blue-600 font-medium hover:text-blue-800">
                            Read details →
                        </a>
                    </article>
                </div>
            </div>
        </div>
    </section>

    <!-- Latest News -->
    <section class="py-12 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-8">Latest Updates</h2>

            <div class="space-y-8">
                <!-- News Article -->
                <article class="border-b border-gray-200 pb-8">
                    <div class="flex flex-col md:flex-row gap-6">
                        <div class="md:w-1/4">
                            <div class="aspect-w-16 aspect-h-9 bg-gray-200 rounded-lg">
                                <div class="w-full h-32 bg-gradient-to-r from-purple-500 to-purple-700 rounded-lg flex items-center justify-center">
                                    <svg class="w-8 h-8 text-white opacity-50" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                </div>
                            </div>
                        </div>
                        <div class="md:w-3/4">
                            <div class="flex items-center text-sm text-gray-500 mb-3">
                                <span class="bg-yellow-100 text-yellow-800 px-2 py-1 rounded text-xs font-medium mr-3">
                                    REMINDER
                                </span>
                                <time datetime="2024-01-13">January 13, 2024</time>
                            </div>
                            <h3 class="text-xl font-semibold text-gray-900 mb-3">
                                Tax Filing Season Opens February 1st - Prepare Now
                            </h3>
                            <p class="text-gray-600 mb-4">
                                The IRS announces that tax filing season will begin February 1st, 2024. Citizens are encouraged to gather necessary documents and explore new online filing tools to streamline the process.
                            </p>
                            <a href="/news/tax-season-2024" class="text-blue-600 font-medium hover:text-blue-800">
                                Read more →
                            </a>
                        </div>
                    </div>
                </article>

                <article class="border-b border-gray-200 pb-8">
                    <div class="flex flex-col md:flex-row gap-6">
                        <div class="md:w-1/4">
                            <div class="aspect-w-16 aspect-h-9 bg-gray-200 rounded-lg">
                                <div class="w-full h-32 bg-gradient-to-r from-green-500 to-green-700 rounded-lg flex items-center justify-center">
                                    <svg class="w-8 h-8 text-white opacity-50" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"></path>
                                    </svg>
                                </div>
                            </div>
                        </div>
                        <div class="md:w-3/4">
                            <div class="flex items-center text-sm text-gray-500 mb-3">
                                <span class="bg-green-100 text-green-800 px-2 py-1 rounded text-xs font-medium mr-3">
                                    PROGRAM LAUNCH
                                </span>
                                <time datetime="2024-01-12">January 12, 2024</time>
                            </div>
                            <h3 class="text-xl font-semibold text-gray-900 mb-3">
                                New Healthcare Access Program for Rural Communities
                            </h3>
                            <p class="text-gray-600 mb-4">
                                A comprehensive healthcare initiative launches to improve medical access in underserved rural areas, including mobile clinics, telemedicine services, and specialist visits.
                            </p>
                            <a href="/news/rural-healthcare-program" class="text-blue-600 font-medium hover:text-blue-800">
                                Learn about eligibility →
                            </a>
                        </div>
                    </div>
                </article>

                <article class="border-b border-gray-200 pb-8">
                    <div class="flex flex-col md:flex-row gap-6">
                        <div class="md:w-1/4">
                            <div class="aspect-w-16 aspect-h-9 bg-gray-200 rounded-lg">
                                <div class="w-full h-32 bg-gradient-to-r from-indigo-500 to-indigo-700 rounded-lg flex items-center justify-center">
                                    <svg class="w-8 h-8 text-white opacity-50" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M6 6V5a3 3 0 013-3h2a3 3 0 013 3v1h2a2 2 0 012 2v6a2 2 0 01-2 2H4a2 2 0 01-2-2V8a2 2 0 012-2h2zm4-1a1 1 0 00-1 1v1h2V6a1 1 0 00-1-1zM8 8a1 1 0 012 0v6H8V8zm4 0a1 1 0 112 0v6h-2V8z" clip-rule="evenodd"></path>
                                    </svg>
                                </div>
                            </div>
                        </div>
                        <div class="md:w-3/4">
                            <div class="flex items-center text-sm text-gray-500 mb-3">
                                <span class="bg-purple-100 text-purple-800 px-2 py-1 rounded text-xs font-medium mr-3">
                                    JOBS REPORT
                                </span>
                                <time datetime="2024-01-11">January 11, 2024</time>
                            </div>
                            <h3 class="text-xl font-semibold text-gray-900 mb-3">
                                Government Announces 50,000 New Federal Job Openings
                            </h3>
                            <p class="text-gray-600 mb-4">
                                Federal agencies are hiring across multiple sectors including technology, healthcare, education, and infrastructure development with competitive benefits and remote work options.
                            </p>
                            <a href="/news/federal-jobs-announcement" class="text-blue-600 font-medium hover:text-blue-800">
                                View job openings →
                            </a>
                        </div>
                    </div>
                </article>

                <article class="border-b border-gray-200 pb-8">
                    <div class="flex flex-col md:flex-row gap-6">
                        <div class="md:w-1/4">
                            <div class="aspect-w-16 aspect-h-9 bg-gray-200 rounded-lg">
                                <div class="w-full h-32 bg-gradient-to-r from-red-500 to-red-700 rounded-lg flex items-center justify-center">
                                    <svg class="w-8 h-8 text-white opacity-50" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                                    </svg>
                                </div>
                            </div>
                        </div>
                        <div class="md:w-3/4">
                            <div class="flex items-center text-sm text-gray-500 mb-3">
                                <span class="bg-orange-100 text-orange-800 px-2 py-1 rounded text-xs font-medium mr-3">
                                    SAFETY ALERT
                                </span>
                                <time datetime="2024-01-10">January 10, 2024</time>
                            </div>
                            <h3 class="text-xl font-semibold text-gray-900 mb-3">
                                Winter Weather Preparedness Guidelines Updated
                            </h3>
                            <p class="text-gray-600 mb-4">
                                Emergency management agencies release updated guidelines for winter weather preparedness, including new evacuation procedures and emergency supply recommendations.
                            </p>
                            <a href="/news/winter-weather-guidelines" class="text-blue-600 font-medium hover:text-blue-800">
                                View safety guidelines →
                            </a>
                        </div>
                    </div>
                </article>
            </div>

            <!-- Pagination -->
            <div class="mt-12 flex justify-center">
                <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px">
                    <a href="#" class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                        <span class="sr-only">Previous</span>
                        <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                        </svg>
                    </a>
                    <a href="#" class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">1</a>
                    <a href="#" class="bg-blue-50 border-blue-500 text-blue-600 relative inline-flex items-center px-4 py-2 border text-sm font-medium">2</a>
                    <a href="#" class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">3</a>
                    <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700">...</span>
                    <a href="#" class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">8</a>
                    <a href="#" class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                        <span class="sr-only">Next</span>
                        <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                        </svg>
                    </a>
                </nav>
            </div>
        </div>
    </section>

    <!-- Newsletter Signup -->
    <section class="py-16 bg-blue-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="max-w-2xl mx-auto text-center">
                <h2 class="text-3xl font-bold text-gray-900 mb-4">Stay Informed</h2>
                <p class="text-lg text-gray-600 mb-8">
                    Subscribe to our newsletter to receive the latest government news and updates directly in your inbox.
                </p>
                <form class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
                    <input
                        type="email"
                        placeholder="Enter your email address"
                        class="flex-1 px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                        required
                    />
                    <button
                        type="submit"
                        class="bg-blue-600 text-white px-8 py-3 rounded-lg font-medium hover:bg-blue-700 transition-colors"
                    >
                        Subscribe
                    </button>
                </form>
                <p class="text-sm text-gray-500 mt-4">
                    We respect your privacy. Unsubscribe at any time.
                </p>
            </div>
        </div>
    </section>
</Layout>

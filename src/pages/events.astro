// Redirect /about to /en/about (default language)
const getUrlWithBase = (href: string) => {
    const isDev = import.meta.env.NODE_ENV !== 'production';
    const basePath = isDev ? '' : '/thamizhi-site';
    
    return href ? `${basePath}/en/${href}` : href;
};
return Astro.redirect(getUrlWithBase('events'), 301);

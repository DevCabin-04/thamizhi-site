---
import Layout from "../layouts/Layout.astro";
import aboutContent from "../content/about.json";
import siteConfig from "../content/site_config.json";
---

<Layout
    title={`About - ${siteConfig.organization.name}`}
    description={aboutContent.hero.description}
>
    <!-- Page Header -->
    <section
        class="bg-gradient-to-br from-orange-600 via-red-600 to-amber-600 text-white relative overflow-hidden"
    >
        <div class="absolute inset-0 opacity-10">
            <div
                class="absolute top-0 left-0 w-full h-full"
                style="background-image: radial-gradient(circle, white 1px, transparent 1px); background-size: 20px 20px;"
            >
            </div>
        </div>
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 relative">
            <div class="max-w-3xl">
                <h1 class="text-4xl lg:text-5xl font-bold mb-4">
                    {aboutContent.hero.title}
                </h1>
                <h2
                    class="text-2xl lg:text-3xl font-medium text-orange-100 mb-6"
                >
                    {aboutContent.hero.title_tamil}
                </h2>
                <p class="text-xl text-orange-100">
                    {aboutContent.hero.description}
                </p>
            </div>
        </div>
    </section>

    <!-- Mission & Vision -->
    <section class="py-16 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
                <!-- Mission -->
                <div class="bg-orange-50 rounded-lg p-8">
                    <h2 class="text-3xl font-bold text-gray-900 mb-4">
                        {aboutContent.mission.title}
                    </h2>
                    <h3 class="text-2xl font-medium text-orange-600 mb-6">
                        {aboutContent.mission.title_tamil}
                    </h3>
                    <p class="text-lg text-gray-700 mb-4">
                        {aboutContent.mission.content}
                    </p>
                    <p class="text-gray-600">
                        {aboutContent.mission.content_tamil}
                    </p>
                </div>

                <!-- Vision -->
                <div class="bg-red-50 rounded-lg p-8">
                    <h2 class="text-3xl font-bold text-gray-900 mb-4">
                        {aboutContent.vision.title}
                    </h2>
                    <h3 class="text-2xl font-medium text-red-600 mb-6">
                        {aboutContent.vision.title_tamil}
                    </h3>
                    <p class="text-lg text-gray-700 mb-4">
                        {aboutContent.vision.content}
                    </p>
                    <p class="text-gray-600">
                        {aboutContent.vision.content_tamil}
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Core Values -->
    <section class="py-16 bg-amber-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold text-gray-900 mb-4">
                    Our Core Values
                </h2>
                <h3 class="text-2xl font-medium text-orange-600 mb-6">
                    எங்கள் முக்கிய மதிப்புகள்
                </h3>
                <p class="text-lg text-gray-600 max-w-2xl mx-auto">
                    The principles that guide our work and define our commitment
                    to the Tamil community.
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                {
                    aboutContent.values.map((value) => (
                        <div class="bg-white rounded-lg p-6 text-center hover:shadow-lg transition-shadow">
                            <div class="w-16 h-16 bg-gradient-to-br from-orange-500 to-red-500 rounded-lg flex items-center justify-center mx-auto mb-4">
                                <svg
                                    class="w-8 h-8 text-white"
                                    fill="currentColor"
                                    viewBox="0 0 20 20"
                                >
                                    <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                            </div>
                            <h3 class="text-xl font-semibold text-gray-900 mb-2">
                                {value.title}
                            </h3>
                            <h4 class="text-lg font-medium text-orange-600 mb-3">
                                {value.title_tamil}
                            </h4>
                            <p class="text-gray-600 mb-2">
                                {value.description}
                            </p>
                            <p class="text-sm text-gray-500">
                                {value.description_tamil}
                            </p>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- History Timeline -->
    <section class="py-16 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="max-w-4xl mx-auto">
                <div class="text-center mb-12">
                    <h2 class="text-3xl font-bold text-gray-900 mb-4">
                        {aboutContent.history.title}
                    </h2>
                    <h3 class="text-2xl font-medium text-orange-600 mb-6">
                        {aboutContent.history.title_tamil}
                    </h3>
                    <p class="text-lg text-gray-600">
                        {aboutContent.history.description}
                    </p>
                </div>

                <div class="space-y-8">
                    {
                        aboutContent.history.timeline.map((item, index) => (
                            <div class="flex">
                                <div class="flex-shrink-0">
                                    <div
                                        class={`w-8 h-8 rounded-full flex items-center justify-center ${
                                            index % 2 === 0
                                                ? "bg-orange-600"
                                                : "bg-red-600"
                                        }`}
                                    >
                                        <div class="w-2 h-2 bg-white rounded-full" />
                                    </div>
                                </div>
                                <div class="ml-4">
                                    <div class="text-sm text-gray-500 mb-1">
                                        {item.year}
                                    </div>
                                    <h3 class="text-lg font-semibold text-gray-900 mb-1">
                                        {item.title}
                                    </h3>
                                    <h4 class="text-md font-medium text-orange-600 mb-2">
                                        {item.title_tamil}
                                    </h4>
                                    <p class="text-gray-600 mb-2">
                                        {item.description}
                                    </p>
                                    <p class="text-sm text-gray-500">
                                        {item.description_tamil}
                                    </p>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
        </div>
    </section>

    <!-- Leadership Team -->
    <section class="py-16 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold text-gray-900 mb-4">
                    {aboutContent.leadership.title}
                </h2>
                <h3 class="text-2xl font-medium text-orange-600 mb-6">
                    {aboutContent.leadership.title_tamil}
                </h3>
                <p class="text-lg text-gray-600 max-w-2xl mx-auto">
                    {aboutContent.leadership.description}
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                {
                    aboutContent.leadership.members.map((member) => (
                        <div class="bg-white rounded-lg shadow-sm p-6 text-center hover:shadow-md transition-shadow">
                            <div class="w-24 h-24 bg-gradient-to-br from-orange-500 to-red-500 rounded-full mx-auto mb-4 flex items-center justify-center">
                                <span class="text-white text-2xl font-bold">
                                    {member.name
                                        .split(" ")
                                        .map((n) => n[0])
                                        .join("")}
                                </span>
                            </div>
                            <h3 class="text-xl font-semibold text-gray-900 mb-1">
                                {member.name}
                            </h3>
                            <h4 class="text-lg font-medium text-orange-600 mb-1">
                                {member.name_tamil}
                            </h4>
                            <p class="text-orange-600 font-medium mb-2">
                                {member.position}
                            </p>
                            <p class="text-sm text-gray-500 mb-3">
                                {member.position_tamil}
                            </p>
                            <p class="text-gray-600 text-sm mb-4">
                                {member.bio}
                            </p>
                            <div class="text-xs text-gray-500">
                                <p class="font-medium mb-1">Education:</p>
                                <p>{member.education}</p>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Statistics -->
    <section class="py-16 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold text-gray-900 mb-4">
                    {aboutContent.achievements.title}
                </h2>
                <h3 class="text-2xl font-medium text-orange-600 mb-6">
                    {aboutContent.achievements.title_tamil}
                </h3>
                <p class="text-lg text-gray-600">
                    {aboutContent.achievements.description}
                </p>
            </div>

            <div
                class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-8 mb-16"
            >
                {
                    aboutContent.statistics.map((stat) => (
                        <div class="text-center">
                            <div class="text-3xl lg:text-4xl font-bold text-orange-600 mb-2">
                                {stat.number}
                            </div>
                            <div class="text-gray-600 font-medium text-sm">
                                {stat.label}
                            </div>
                            <div class="text-xs text-gray-500">
                                {stat.label_tamil}
                            </div>
                        </div>
                    ))
                }
            </div>

            <!-- Awards -->
            <div class="bg-amber-50 rounded-lg p-8">
                <h3 class="text-2xl font-bold text-gray-900 mb-6 text-center">
                    Recent Awards & Recognition
                </h3>
                <div class="space-y-6">
                    {
                        aboutContent.achievements.awards.map((award) => (
                            <div class="flex items-start space-x-4">
                                <div class="w-12 h-12 bg-gradient-to-br from-orange-500 to-red-500 rounded-lg flex items-center justify-center flex-shrink-0">
                                    <svg
                                        class="w-6 h-6 text-white"
                                        fill="currentColor"
                                        viewBox="0 0 20 20"
                                    >
                                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                    </svg>
                                </div>
                                <div class="flex-1">
                                    <div class="flex items-center mb-2">
                                        <span class="bg-orange-100 text-orange-800 px-2 py-1 rounded text-xs font-medium mr-3">
                                            {award.year}
                                        </span>
                                        <span class="text-sm text-gray-500">
                                            {award.organization}
                                        </span>
                                    </div>
                                    <h4 class="text-lg font-semibold text-gray-900 mb-1">
                                        {award.title}
                                    </h4>
                                    <h5 class="text-md font-medium text-orange-600 mb-2">
                                        {award.title_tamil}
                                    </h5>
                                    <p class="text-gray-600 text-sm">
                                        {award.description}
                                    </p>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
        </div>
    </section>

    <!-- Partnerships -->
    <section class="py-16 bg-orange-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold text-gray-900 mb-4">
                    {aboutContent.partnerships.title}
                </h2>
                <h3 class="text-2xl font-medium text-orange-600 mb-6">
                    {aboutContent.partnerships.title_tamil}
                </h3>
                <p class="text-lg text-gray-600 max-w-2xl mx-auto">
                    {aboutContent.partnerships.description}
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                {
                    aboutContent.partnerships.partners.map((partner) => (
                        <div class="bg-white rounded-lg p-6 border-l-4 border-orange-500">
                            <h4 class="text-lg font-semibold text-gray-900 mb-2">
                                {partner.name}
                            </h4>
                            <div class="flex justify-between items-center">
                                <span class="text-sm text-gray-600">
                                    {partner.type}
                                </span>
                                <span class="bg-orange-100 text-orange-800 px-2 py-1 rounded text-xs font-medium">
                                    {partner.relationship}
                                </span>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Call to Action -->
    <section
        class="py-16 bg-gradient-to-r from-orange-600 to-red-600 text-white"
    >
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <h2 class="text-3xl font-bold mb-4">Join Our Mission</h2>
            <h3 class="text-2xl font-medium mb-6">
                எங்கள் நோக்கத்தில் சேருங்கள்
            </h3>
            <p class="text-xl text-orange-100 mb-8">
                Help us preserve Tamil heritage and build a stronger community
                for future generations.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a
                    href="/membership"
                    class="bg-white text-orange-600 px-8 py-3 rounded-lg font-medium hover:bg-orange-50 transition-colors"
                >
                    Become a Member
                </a>
                <a
                    href="/volunteer"
                    class="border-2 border-white text-white px-8 py-3 rounded-lg font-medium hover:bg-white hover:text-orange-600 transition-colors"
                >
                    Volunteer With Us
                </a>
            </div>
        </div>
    </section>
</Layout>
